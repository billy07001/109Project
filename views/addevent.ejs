<!DOCTYPE html>
<html>
  <head>
    <title>Event</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <style>
      body{
       text-align: center;
      }

      .member_list{
        text-align: left;
      }

      .signup{
        padding: 5%;
      }
    </style>
  </head>
  <body>
    <h1><%= title %></h1>
    <h1>Event Management Page</h1>
    <h2>Event Create</h2>
    <div class = "create">
    <form method='post', action='/event/createevent', enctype='multipart/form-data'>
      <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">eveName</label>
        <div class="col-sm-10">
          <input name = "eveName" type="text" class="form-control" id="eveName" placeholder="eveName">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveState</label>
        <div class="col-sm-10">
          <input name = "eveState" type="text" class="form-control" id="eveState" placeholder="eveState">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveType</label>
        <div class="col-sm-10">
          <input name = "eveType" type="text" class="form-control" id="eveType" placeholder="eveType">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveLoc</label>
        <div class="col-sm-10">
          <input name = "eveLoc" type="text" class="form-control" id="eveLoc" placeholder="eveLoc">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveIssuerID</label>
        <div class="col-sm-10">
          <input name = "eveIssuerID" type="text" class="form-control" id="eveIssuerID" placeholder="eveIssuerID">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveHelper</label>
        <div class="col-sm-10">
          <input name = "eveHelper" type="text" class="form-control" id="eveHelper" placeholder="eveHelper">
        </div>
      </div>


      <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">eveTime</label>
        <div class="col-sm-10">
          <input name = "eveTime" type="text" class="form-control" id="eveTime" placeholder="eveTime">
        </div>
      </div>


      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </div>
    </form>

    </div>
    <ul class = "event_list">
    <% allevent.forEach( function( allevent ){ %>
      <li><%= allevent.eveName %></li>
    <% }); %> 
    </ul>
  </body>
</html>